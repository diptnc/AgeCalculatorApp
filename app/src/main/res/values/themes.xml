<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AgeCalculator" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>
    <!-- date picker dialog -->
    <style name="datePickerDialog" parent="Theme.AppCompat.Light.Dialog" >
        <item name="colorPrimary">@color/themeBlue</item>
        <item name="colorPrimaryDark">@color/themeBlack</item>
        <item name="colorAccent">@color/themeBlue</item>
        <item name="android:dialogCornerRadius">25dp</item>
    </style>
</resources>